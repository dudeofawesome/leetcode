      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      // "runtimeArgs": ["run", "--inspect", "--allow-all"],
      "runtimeArgs": ["test", "--inspect", "--allow-all"],
      "attachSimplePort": 9229
